@model SV19T1081011.UserInterface.Models.UserInterfaceOutput

<!-- ======= Hero Slider Section ======= -->
<section id="hero-slider" class="hero-slider">
    <div class="container-md" data-aos="fade-in">
        <div class="row">
            <div class="col-12">
                <div class="swiper sliderFeaturedPosts">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.TrendingPosts)
                        {
                            <div class="swiper-slide">
                                <a href="~/@item.Category.CategoryUrlName/@item.UrlTitle" class="img-bg d-flex align-items-end" style="background-image: url('http://localhost:52854/@item.Image');">
                                    <div class="img-bg-inner">
                                        <h2>@item.Title</h2>
                                        <p>@item.BriefContent</p>
                                    </div>
                                </a>
                            </div>
                        }

                    </div>
                    <div class="custom-swiper-button-next">
                        <span class="bi-chevron-right"></span>
                    </div>
                    <div class="custom-swiper-button-prev">
                        <span class="bi-chevron-left"></span>
                    </div>

                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Hero Slider Section -->
<!-- ======= Post Grid Section ======= -->
<section id="posts" class="posts">
    <div class="container" data-aos="fade-up">
        <div class="row g-5">
            <div class="col-lg-4">
                @foreach (var item in Model.MostRecentPosts.Select((value, index) => new { index, value }))
                {
                    if (item.index == 6)
                    {
                        <div class="post-entry-1 lg">
                            <a href="~/@item.value.Category.CategoryUrlName/@item.value.UrlTitle"><img src="http://localhost:52854/@item.value.Image" alt="" class="img-fluid"></a>
                            <div class="post-meta"><span class="date">@item.value.Category.CategoryName</span> <span class="mx-1">&bullet;</span> <span>@Html.Raw(string.Format("{0:dd/MM/yyyy}", @item.value.CreatedTime))</span></div>
                            <h2><a href="~/@item.value.Category.CategoryUrlName/@item.value.UrlTitle">@item.value.Title</a></h2>
                            <p class="mb-4 d-block">@item.value.BriefContent</p>

                            <div class="d-flex align-items-center author">
                                <div class="name">
                                    <h3 class="m-0 p-0">@item.value.Creator.FullName</h3>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="col-lg-8">
                <div class="row g-5">
                    <div class="col-lg-4 border-start custom-border">
                        @foreach (var item in Model.MostRecentPosts.Select((value, index) => new { index, value }))
                        {
                            if (item.index >= 0 && item.index <= 2)
                            {
                                <div class="post-entry-1">
                                    <a href="~/@item.value.Category.CategoryUrlName/@item.value.UrlTitle"><img src="http://localhost:52854/@item.value.Image" alt="" class="img-fluid"></a>
                                    <div class="post-meta"><span class="date">@item.value.Category.CategoryName</span> <span class="mx-1">&bullet;</span> <span>@Html.Raw(string.Format("{0:dd/MM/yyyy}", @item.value.CreatedTime))</span></div>
                                    <h2><a href="~/@item.value.Category.CategoryUrlName/@item.value.UrlTitle">@item.value.Title</a></h2>
                                </div>
                            }
                        }
                    </div>
                    <div class="col-lg-4 border-start custom-border">
                        @foreach (var item in Model.MostRecentPosts.Select((value, index) => new { index, value }))
                        {
                            if (item.index >= 3 && item.index <= 5)
                            {
                                <div class="post-entry-1">
                                    <a href="~/@item.value.Category.CategoryUrlName/@item.value.UrlTitle"><img src="http://localhost:52854/@item.value.Image" alt="" class="img-fluid"></a>
                                    <div class="post-meta"><span class="date">@item.value.Category.CategoryName</span> <span class="mx-1">&bullet;</span> <span>@Html.Raw(string.Format("{0:dd/MM/yyyy}", @item.value.CreatedTime))</span></div>
                                    <h2><a href="~/@item.value.Category.CategoryUrlName/@item.value.UrlTitle">@item.value.Title</a></h2>
                                </div>
                            }
                        }
                    </div>

                    <!-- Trending Section -->
                    <div class="col-lg-4">
                        <div class="trending">
                            <h3>Nổi bật nhất</h3>
                            <ul class="trending-post">
                                @foreach (var item in Model.TrendingPosts.Select((value, index) => new { index, value }))
                                {
                                    <li>
                                        <a href="~/@item.value.Category.CategoryUrlName/@item.value.UrlTitle">
                                            <span class="number">@(item.index + 1)</span>
                                            <h3>@item.value.Title</h3>
                                            <span class="author">@item.value.Creator.FullName</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div> <!-- End Trending Section -->
                </div>
            </div>
        </div> <!-- End .row -->
    </div>
</section>
