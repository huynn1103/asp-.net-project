@using SV19T1081011.BusinessLayers
@model SV19T1081011.DomainModels.PostComment
@{
    ViewBag.Title = "Xóa bình luận";    
}

<div class="box box-danger">
    @*<div class="box-header">
        <h3>@Model.Title</h3>
    </div>*@
    <div class="box-body">
        <form action="~/Comment/Delete/@Model.CommentId" method="post">
            <div class="row">
                <div class="col-sm-8">
                    @Html.Raw(Model.CommentContent)
                </div>
                <div class="col-sm-4">
                    <div class="form-group-sm">
                        <label>Bài viết:</label>
                        <p class="form-control">@Model.Post.Title</p>
                    </div>
                    <div class="form-group-sm">
                        <label>Thời điểm đăng:</label>
                        <p class="form-control">@string.Format("{0:dd/MM/yyyy HH:mm:ss}", Model.CreatedTime)</p>
                    </div>
                    <div class="form-group-sm">
                        <label>Người bình luận:</label>
                        <p class="form-control">@Model.Creator.FullName</p>
                    </div>
                    <div class="form-group-sm">
                        <button type="submit" class="btn btn-danger">
                            <i class="glyphicon glyphicon-remove"></i>
                            Xóa bình luận
                        </button>
                        <a href="~/Post" class="btn btn-default">
                            Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

