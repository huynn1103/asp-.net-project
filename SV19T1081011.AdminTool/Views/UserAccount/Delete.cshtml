@using SV19T1081011.BusinessLayers
@model SV19T1081011.DomainModels.UserAccount
@{
    ViewBag.Title = "Xóa tài khoản";
}

<div class="box box-danger">
    @*<div class="box-header">
            <h3>@Model.Title</h3>
        </div>*@
    <div class="box-body">
        <form action="~/UserAccount/Delete/@Model.UserId" method="post">
            <div class="form-group-sm">
                <label>Tên đăng nhập:</label>
                <p class="form-control">@Model.UserName</p>
            </div>
            <div class="form-group-sm">
                <label>Tên đầy đủ:</label>
                <p class="form-control">@Model.FirstName @Model.LastName</p>
            </div>
            <div class="form-group-sm">
                <label>Email:</label>
                <p class="form-control">@Model.Email</p>
            </div>
            <div class="form-group-sm">
                <label>Số điện thoại:</label>
                <p class="form-control">@Model.Phone</p>
            </div>
            <div class="form-group-sm">
                <label>Vai trò:</label>
                <p class="form-control">@Model.GroupName</p>
            </div>
            <div class="form-group-sm">
                <label>Thời điểm đăng ký:</label>
                <p class="form-control">@string.Format("{0:dd/MM/yyyy HH:mm:ss}", Model.RegisteredTime)</p>
            </div>
            <div class="form-group-sm">
                <button type="submit" class="btn btn-danger">
                    <i class="glyphicon glyphicon-remove"></i>
                    Xóa tài khoản
                </button>
                <a href="~/UserAccount" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

