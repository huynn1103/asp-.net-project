@model SV19T1081011.AdminTool.Models.PaginationSearchInput
@{
    ViewBag.Title = "Quản lý tài khoản";
}

<div class="box box-primary">
    <div class="box-body ">
        <form id="formSearch" action="~/UserAccount/Search">
            @Html.HiddenFor(m => m.PageSize)
            <div class="row">
                <div class="col-md-12 form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.SearchValue, new { @class = "form-control", @placeholder = "Nhập giá trị cần tìm...", @autofocus = "autofocus" })
                        <span class="input-group-btn">
                            <button id="buttonSearch" type="button" class="btn btn-info btn-flat">Tìm kiếm</button>
                            <a href="~/UserAccount/Create" class="btn btn-primary">
                                <i class="glyphicon glyphicon-plus"></i> Nhập tài khoản mới
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="box box-success">
    <div class="box-body" id="searchResult">
    </div>
</div>

@section scripts {
    <script src="~/Scripts/site.js"></script>

    <script>
        $(document).ready(function () {
            $("#buttonSearch").click(function () {
                paginationSearch(1);
            });
            $("#formSearch").submit(function (e) {
                e.preventDefault();
                paginationSearch(1);
                return false;
            });
            paginationSearch(@Model.Page);
        })
    </script>
}